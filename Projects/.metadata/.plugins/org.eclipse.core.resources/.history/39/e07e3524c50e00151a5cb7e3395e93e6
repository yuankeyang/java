	private ScheduleDAO dao;
	public ScheduleDataAction() {
		ApplicationContext otx = new ClassPathXmlApplicationContext("applicationContext.xml");
		ScheduleDAO dao=(ScheduleDAO)otx.getBean("ScheduleDAO");
	}
	
	
