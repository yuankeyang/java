        <div class="my_dis_diray_con">
                <div class="mg_info">
                    <h3>总共有（<a id="recAID" href="javascript:void(0)"><%=N %></a>）条记录</h3>
                  <ul id="records"></ul>
                </div>
            </div>
    </div>
    <script>
    $("#recAID").click(function(){
    var n=<%=N %>;
    for(i=0;i<n;i++)
    {
    	$("#records").append("<li><a href='#'>记录"+(i+1)+"</a>,咨询专家：<%=rs.getString("expe_id")%><%rs.next();%></li>");
    }
    });
    </script>
    
